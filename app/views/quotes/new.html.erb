<h3 class='text-center'>Adding New Quote</h3>
  <div class='form-group'>
    <div class='col-md-9'>
      <%= simple_form_for(@quote, html: { class: 'form-vertical' }) do |f| %>
        <div class='col-md-9'>
          <%= f.input :text, label: "New Quote", input_html: { class: 'form-control', rows: '5'}, placeholder: "Enter your quote here" %>
          <%= f.button :submit, "Save Quote", class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
